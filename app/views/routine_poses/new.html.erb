
<h4>Choose a Pose to Add and the Routine You want to add to Modify: </h4>
<%= form_for @routine_pose do |f| %>

<%=f.label :yoga_pose%>
<%=f.collection_select :yoga_pose_id, @yoga_poses, :id, :name %>

<%=f.label :routine%>
<%=f.collection_select :routine_id, @routines, :id, :name %>

<%= f.submit %>
<% end %>

</br>
